@model IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-2"> </div>
    <div class="col-md-8">
        <div class="info-text">
            <p>
                A palindrome is a word, number, phrase, or other sequence of characters 
                which reads the same backward as forward, such as madam or racecar or the 
                number 10801. Sentence-length palindromes may be written when allowances 
                are made for adjustments to capital letters, punctuation, and word dividers, 
                such as "A man, a plan, a canal, Panama!", "Was it a car or a cat I saw?" 
                or "No 'x' in Nixon".
            </p>
            <p>
                More on palindromes here at
                <a href="https://en.wikipedia.org/wiki/Palindrome" target="_blank"> Wikipedia...</a>
            </p>
        </div>
        <div>
            <form action="/" method="post">
                <div class="form-group">
                    <label asp-for="Word"></label>
                    <input asp-for="Word"
                           type="text"
                           name="Word"
                           class="form-control" />
                    <span asp-validation-for="Word" class="text-danger"></span>
                </div>
                <div class="form-group submit-btn-group">
                    <button class="btn btn-info">
                        SUBMIT
                    </button>
                </div>
                @if (Model.IsPalindrome && Model.Word != String.Empty)
                {
                    <div class="form-group text-result">
                        <label class="text-success">
                            "@Model.Word" is a Palindrome!
                        </label>
                    </div>
                }
                else if (!Model.IsPalindrome && Model.Word != String.Empty)
                {
                    <div class="form-group text-result">
                        <label class="text-danger">
                            "@Model.Word" is not a Palindrome!
                        </label>
                    </div>
                }
                else
                {

                }
            </form>
        </div>
        
    </div>
    <div class="col-md-2"> </div>
</div>
